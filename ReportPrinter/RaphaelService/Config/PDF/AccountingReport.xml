	</ReportHeader>
	<PageHeader Height="0.5*" Rows="1" Columns="4">
		
		<Image Margin="5 5 5 5" Padding="5 5 5 5" HorizontalAlignment="Left" VerticalAlignment="Center" BackgroundColor="Red">
			<Row>0</Row>
			<Column>0</Column>
			<RowSpan>1</RowSpan>
			<ColumnSpan>1</ColumnSpan>
			<SourceType>Local</SourceType>
			<ImageSource>.\Image\Logo.png</ImageSource>
		</Image>
	</PageHeader>

	<PageBody Height="8*" Margin="0 20 0 20" Padding="0 10 0 10">
		
		<Table FontSize="9" FontFamily="Times New Roman" FontStyle="Regular" BrushColor="Black"
		       HorizontalAlignment="Center" VerticalAlignment="Center">
			<BoardThickness>1</BoardThickness>
			<LineSpace>0.5</LineSpace>
			<TitleHorizontalAlignment>Left</TitleHorizontalAlignment>
			<SqlTemplateId>PrintPdfQuery</SqlTemplateId>
			<SqlId>VendorInfo</SqlId>
			<SqlResColumn Id="VendorID" Title="VendorID" Width="1*" />
			<SqlResColumn Id="VendorName" Title="VendorName" Width="2*" />
			<SqlResColumn Id="ShortName" Title="ShortName" Width="1*" />
			<SqlResColumn Id="GroupID" Title="GroupID" Width="1*" />
			<SqlResColumn Id="CurrencyCode" Title="CurrencyCode" Width="1*" />
		</Table>

	</PageBody>

	<PageFooter Height="0.5*" Rows="1" Columns="4">
		
		<Barcode Padding="0 20 0 20" FontSize="9" FontFamily="Calibri"
		         FontStyle="Regular" BrushColor="Navy" Opacity="1">
			<Row>0</Row>
			<Column>0</Column>
			<RowSpan>1</RowSpan>
			<ColumnSpan>1</ColumnSpan>
			<Format>CODE_128</Format>
			<ShowBarcodeText>true</ShowBarcodeText>
			<SqlTemplateId>PrintPdfQuery</SqlTemplateId>
			<SqlId>GlAccount</SqlId>
			<SqlResColumn Id="AccountNumber" />
		</Barcode>
	</PageFooter>
	<ReportFooter Height="1*" Rows="1" Columns="2" Margin="0 20 0 20" Padding="0 10 0 10">
		
		<Text Margin="5 5 5 5" Padding="5 5 5 5" HorizontalAlignment="Left" VerticalAlignment="Center"
		      FontSize="9" FontFamily="Times New Roman" FontStyle="Regular" BrushColor="Black" BackgroundColor="Green" Opacity="1">
